		<description>Create ZIP archive from selected files</description>
		<patterns>*</patterns>
		<other-files/>
		<directories/>
	</action>
	<action>
		<icon>package-x-generic</icon>
		<name>Compress to 7z</name>
		<unique-id>1704067203-compress-7z</unique-id>
		<command>~/.local/bin/thunar-compress-7z.sh %F</command>
		<description>Create 7z archive from selected files</description>
		<patterns>*</patterns>
		<other-files/>
		<directories/>
	</action>
</actions>
