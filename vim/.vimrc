set nocompatible
syntax on

" Номера строк
set number

" Мышь в Vim
set mouse=a

" Современное поведение Backspace
set backspace=indent,eol,start

" Копирование в системный буфер обмена
set clipboard=unnamedplus

" Табы / Отступы
set tabstop=4
set shiftwidth=4
set expandtab
set autoindent
set smartindent

" Поиск
set ignorecase
set smartcase

" Позиция курсора
set ruler

" Цвета для номеров строк
highlight LineNr ctermfg=darkgrey
highlight CursorLineNr ctermfg=white
